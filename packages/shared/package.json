{
  "name": "@auth-optics/shared",
  "version": "1.0.0",
  "description": "Shared TypeScript types for AuthOptics",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist",
    "watch": "tsc --watch"
  },
  "keywords": [
    "oauth2",
    "oidc",
    "types",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "@vitest/coverage-v8": "^4.0.0"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ]
}
